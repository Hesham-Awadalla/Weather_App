<Window x:Class="Weather_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather_App"
        mc:Ignorable="d"
        Title="Weather App V1.1" Height="343" Width="280" ResizeMode="NoResize">
    <Grid>
        <ContentControl Content="{DynamicResource lblWetterDaten}" Margin="0,20,0,0" HorizontalAlignment="Center" Width="248" Height="195" VerticalAlignment="Top"/>
        <Button x:Name="btnLocateMe" Content="Locate me" Height="60" Margin="0,0,14,25" VerticalAlignment="Bottom" Click="btnLocateMe_Click" HorizontalAlignment="Right" Width="71"/>
        <Button x:Name="btnSearchCity" Content="Search city" Margin="16,0,99,25" Click="btnSearchCity_Click" Height="21" VerticalAlignment="Bottom"/>
        <TextBox x:Name="txtBoxCity" Margin="16,0,99,68" TextWrapping="Wrap" Text="City" Height="18" VerticalAlignment="Bottom"/>
        <TextBox x:Name="txtBoxCountry" Margin="16,0,99,48" TextWrapping="Wrap" Text="Country" Height="18" VerticalAlignment="Bottom"/>
        <ContentControl Content="{DynamicResource img}" Margin="174,135,0,0" HorizontalAlignment="Left" Width="88" Height="77" VerticalAlignment="Top"/>

    </Grid>
</Window>
